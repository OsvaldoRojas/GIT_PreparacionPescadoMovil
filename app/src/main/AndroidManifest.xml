<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simulador">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <uses-library android:name="org.apache.http.legacy" android:required="false" />

        <activity
            android:name="com.example.simulador.ActividadArtefactos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.simulador.preselecion.Tabs_Preselecion"
            android:label="@string/title_activity_tabs__preselecion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.simulador.descongelado.Tabs_Descongelado"
            android:label="@string/title_activity_tabs__descongelado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.simulador.atemperado.Tabs_Atemperado"
            android:label="@string/title_activity_tabs__atemperado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.simulador.Navegador"
            android:label="@string/title_activity_navegador"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.simulador.Turno"
            android:label="@string/app_name"
            android:theme="@style/AppThemeAcceder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.simulador.MainActivity" />
    </application>

</manifest>