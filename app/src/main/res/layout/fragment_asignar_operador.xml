<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_selecion">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/asignarUsuario"
                    android:textColor="@color/negro"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/etiquetaFecha"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="@color/negro"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:textSize="13dp"/>

                <EditText
                    android:id="@+id/campoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Nombre del usuario"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:background="@color/blanco"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:focusable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="Usuario:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaPosicion"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="BÃ¡scula:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaBascula"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="Tina P.:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaTinaPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="Subtalla P.:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaSubtallaPrincipal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="Tina S.:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaTinaSecundaria"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="Subtalla S.:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaSubtallaSecundaria"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/no_selecion"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/campoEscaner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Escanear gafete"
                    android:gravity="center_horizontal"
                    android:textColor="@color/negro"
                    android:background="@color/blanco"
                    android:textSize="15dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:focusable="true">
                    <requestFocus/>
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom">

                <Button
                    android:id="@+id/boton1"
                    android:text="@string/cancelar"
                    style="@style/botonAccion"/>

                <Button
                    android:id="@+id/boton2"
                    android:text="@string/aceptar"
                    style="@style/botonAccion"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/barraProgreso"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                android:indeterminateTint="@color/colorPrimary"/>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
