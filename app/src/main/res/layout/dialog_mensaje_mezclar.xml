<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_selecion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etiquetaMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/negro"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/mensajeTinasMezcladas"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etiquetaTinaSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:text="A1"
                android:textSize="10dp"
                android:textColor="@color/blanco"
                android:background="@color/fondo_tina_principal"/>

            <TextView
                android:id="@+id/etiquetaSubtallaSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:text="A1"
                android:textSize="10dp"
                android:textColor="@color/blanco"
                android:background="@color/fondo_tina_principal"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listaSubtallas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/boton1"
            android:text="@string/aceptar"
            style="@style/botonAccion"/>

    </LinearLayout>

</LinearLayout>