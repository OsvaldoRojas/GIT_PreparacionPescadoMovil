<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_selecion">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/controlProceso"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/etiquetaFecha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:layout_marginTop="1dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/etiquetaHora"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:layout_marginTop="1dp"
                        android:textSize="13dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Clave proceso:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/etiquetaClave"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Hora:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/campoHora"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Temperatura agua:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoTemperatura"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Consumo agua:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoConsumoAgua"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Lote hipoclorito:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoHipoclorito"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Concentrado cloro PPM:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoConcentrado"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Consumo cloro:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoConsumoCloro"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Lote antiespumante:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoLoteAntiespumante"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Antiespumante:"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"/>

                    <EditText
                        android:id="@+id/campoAntiespumante"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@color/colorAccent"
                        android:gravity="right"
                        android:textSize="15dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom">

                <Button
                    android:id="@+id/boton1"
                    android:text="@string/cancelar"
                    style="@style/botonAccion"/>

                <Button
                    android:id="@+id/boton2"
                    android:text="@string/aceptar"
                    style="@style/botonAccion"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/barraProgreso"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                android:indeterminateTint="@color/colorPrimary"/>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
