<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeAcceder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab" parent="Widget.Design.TabLayout">
        <item name="android:colorBackground">@color/noValido</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="botonMenu">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/boton_principal</item>
    </style>

    <style name="botonPrincipal">
        <item name="android:background">@drawable/boton_principal</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="botonAccion">
        <item name="android:background">@drawable/boton_accion</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="botonDialog">
        <item name="android:background">@drawable/boton_dialog</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="numeroUbicacion">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/contenedor_icono_seleccionado</item>
    </style>

    <style name="operador">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@drawable/contenedor_icono</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/ic_operador_gris</item>
    </style>

    <style name="tina">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@drawable/contenedor_icono</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/ic_tina_gris</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="bascula">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@drawable/contenedor_icono</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/ic_bascula_gris</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="montacargas">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@drawable/contenedor_icono</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:src">@drawable/ic_montacargas_gris</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="posicionAtemperado">
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_width">27dp</item>
        <item name="android:background">@drawable/contenedor_icono</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/ic_tina_gris</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="turno">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/contenedor_turno</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
