<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="0"
    android:toDegrees="1080" >

    <shape
        android:innerRadiusRatio="2"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false" >
        <size
            android:height="55dip"
            android:width="55dip" />

        <gradient
            android:centerColor="@color/grupopinsa_colorWhite"
            android:centerY="0.65"
            android:endColor="@color/grupopinsa_colorCyan"
            android:startColor="@color/grupopinsa_colorWhite"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>