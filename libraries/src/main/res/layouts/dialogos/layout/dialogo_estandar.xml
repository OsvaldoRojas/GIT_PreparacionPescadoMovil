<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grupopinsa_colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_grupopinsa_dialogo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/grupopinsa_spacing_tiny"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_grupopinsa_dialogo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/grupopinsa_dialogo_icono_descripcion"
                android:paddingRight="@dimen/grupopinsa_spacing_tiny"
                android:paddingLeft="@dimen/grupopinsa_spacing_tiny"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_grupopinsa_dialogo_title"
                style="@style/grupopinsa_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grupopinsa_spacing_normal"
            android:paddingRight="@dimen/grupopinsa_spacing_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_grupopinsa_dialogo_message"
                style="@style/grupopinsa_normal_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/grupopinsa_spacing_normal"
                android:paddingBottom="@dimen/grupopinsa_spacing_tiny"
                android:textColor="@color/grupopinsa_colorDarkGray"
                android:minHeight="@dimen/grupopinsa_spacing_huge"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/grupopinsa_spacing_small"
                android:paddingBottom="@dimen/grupopinsa_spacing_tiny"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_grupopinsa_dialogo_negative_button"
                    style="@style/grupopinsa_text_button_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grupopinsa_dialogo_respuesta_cancelar"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_grupopinsa_dialogo_neutral_button"
                    style="@style/grupopinsa_text_button_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_grupopinsa_dialogo_positive_button"
                    style="@style/grupopinsa_text_button_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grupopinsa_dialogo_respuesta_aceptar"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>