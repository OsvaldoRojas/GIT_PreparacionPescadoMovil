<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/id_grupopinsa_dialogo_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grupopinsa_spacing_tiny"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_grupopinsa_dialogo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/grupopinsa_spacing_tiny"
            android:contentDescription="@string/grupopinsa_dialogo_icono_descripcion"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/id_grupopinsa_dialogo_title"
            style="@style/grupopinsa_normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/id_grupopinsa_dialogo_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grupopinsa_spacing_normal">

        <EditText
            android:id="@+id/id_grupopinsa_dialogo_input"
            style="@style/grupopinsa_normal_text"
            android:hint="@string/grupopinsa_texto_vacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/grupopinsa_spacing_tiny"
        android:paddingBottom="@dimen/grupopinsa_spacing_tiny"
        android:paddingLeft="@dimen/grupopinsa_spacing_normal"
        android:paddingRight="@dimen/grupopinsa_spacing_normal"
        android:gravity="end">

        <TextView
            android:id="@+id/id_grupopinsa_dialogo_negative_button"
            style="@style/grupopinsa_text_button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_grupopinsa_dialogo_positive_button"
            style="@style/grupopinsa_text_button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>